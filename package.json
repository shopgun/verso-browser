{
  "name": "verso-browser",
  "version": "1.0.17",
  "description": "A multi-paged viewer for browsers.",
  "main": "dist/verso.js",
  "watch": {
    "build:js": {
      "patterns": [
        "lib/coffeescript"
      ],
      "extensions": [
        "coffee"
      ]
    },
    "build:css": {
      "patterns": [
        "lib/stylus"
      ],
      "extensions": [
        "styl"
      ]
    }
  },
  "scripts": {
    "test": "./node_modules/coffeelint/bin/coffeelint lib/coffeescript/ -r lib/coffeescript/ && jest",
    "build:js": "browserify lib/coffeescript/verso.coffee -t coffeeify -t [ babelify --extensions .coffee --presets [ es2015 ] ] -p browserify-derequire -s Verso --extension=coffee -o dist/verso.js -d",
    "build:css": "stylus lib/stylus/verso.styl -u nib -o dist/verso.css",
    "build": "run-p -l build:js build:css",
    "dev": "npm-watch",
    "serve": "python -m SimpleHTTPServer 8001",
    "prepublishOnly": "npm run build"
  },
  "jest": {
    "moduleFileExtensions": [
      "coffee",
      "js"
    ],
    "transform": {
      "^.+\\.(coffee)$": "<rootDir>/jest-preprocessor.js"
    },
    "testMatch": [
      "**/__tests__/*.(coffee|js)"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shopgun/verso-browser.git"
  },
  "author": "Morten Bo RÃ¸nsholdt <mr@shopgun.com> (https://shopgun.com/)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/shopgun/verso-browser/issues"
  },
  "homepage": "https://github.com/shopgun/verso-browser#readme",
  "dependencies": {},
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babelify": "^8.0.0",
    "browserify": "^16.0.0",
    "browserify-derequire": "^0.9.4",
    "coffeeify": "^3.0.1",
    "coffeelint": "^2.0.7",
    "coffeescript": "^2.2.1",
    "derequire": "^2.0.6",
    "hammerjs": "^2.0.8",
    "jest": "^22.2.2",
    "microevent": "^1.0.0",
    "nib": "^1.1.2",
    "npm-run-all": "^4.1.2",
    "npm-watch": "^0.3.0",
    "stylus": "^0.54.5"
  }
}
