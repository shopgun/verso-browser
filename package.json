{
  "name": "verso",
  "version": "1.0.0",
  "description": "A library for laying out book-like content.",
  "main": "index.coffee",
  "watch": {
    "build-coffee": {
      "patterns": [
        "lib/coffeescript"
      ],
      "extensions": [
        "coffee"
      ]
    },
    "build-styl": {
      "patterns": [
        "lib/stylus"
      ],
      "extensions": [
        "styl"
      ]
    }
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build-coffee": "browserify lib/coffeescript/verso.coffee -t coffeeify -p browserify-derequire -s Verso --extension=coffee -o verso.js -d",
    "build-styl": "stylus lib/stylus/verso.styl -u nib -o verso.css",
    "watch": "npm-watch",
    "start": "python -m SimpleHTTPServer 8001"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shopgun/verso-browser.git"
  },
  "author": "Morten Bo RÃ¸nsholdt",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/shopgun/verso-browser/issues"
  },
  "homepage": "https://github.com/shopgun/verso-browser#readme",
  "dependencies": {
    "browserify": "^14.1.0",
    "browserify-derequire": "^0.9.4",
    "coffeeify": "^2.1.0",
    "coffeelint": "^1.16.0",
    "derequire": "^2.0.6",
    "hammerjs": "^2.0.8",
    "microevent": "^1.0.0",
    "nib": "^1.1.2",
    "npm-watch": "^0.1.8",
    "stylus": "^0.54.5"
  }
}
