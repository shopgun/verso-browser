.verso__pages
    absolute top left
    right 0
    bottom 0
    overflow hidden

.verso__page
    absolute top left
    z-index 2
    width 100%
    height 100%
    visibility hidden
    overflow hidden

    &[data-scroll="true"][data-state="current"],
    &[data-zoomscroll="true"]
        overflow auto
        overflow-scrolling touch
