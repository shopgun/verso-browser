.verso__navigation
    position absolute
    top 50%
    z-index 3
    margin-top -25px
    width 25px
    height 50px
    line-height 50px
    font-size 22px
    font-weight normal
    text-align center
    overflow hidden
    background-color rgba(#000, 0.3)
    color #fff
    cursor pointer
    transition opacity ease 200ms
    opacity 0

    &:hover,
    &:focus
        background-color rgba(#000, 0.6)

    &:active
        background-color rgba(#000, 0.8)

    &[data-direction="previous"]
        left 0

    &[data-direction="next"]
        right 0

    &[data-active="true"]
        opacity 1

@media (pointer: coarse), (max-width: 1000px)
    .verso__navigation
        display none
