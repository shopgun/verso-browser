.verso[data-transition="horizontal-slide"]
    > .verso__page
        transition transform 300ms ease-in-out
        position absolute
        top 0
        left 0

    > .verso--previous
        transform translate3d(-100%, 0, 0)

    > .verso--before
        transform translate3d(-200%, 0, 0)

    > .verso--next
        transform translate3d(100%, 0, 0)

    > .verso--after
        transform translate3d(200%, 0, 0)
