.verso[data-transition="vertical-slide"] > .verso__page
    transition transform 200ms linear

    &[data-state="before"]
        transform translate3d(0, -200%, 0)

    &[data-state="previous"]
        transform translate3d(0, -100%, 0)

    &[data-state="next"]
        transform translate3d(0, 100%, 0)

    &[data-state="after"]
        transform translate3d(0, 200%, 0)
