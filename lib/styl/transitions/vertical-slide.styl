.verso[data-transition="vertical-slide"]
    > .verso__page
        transition transform 300ms ease-in-out
        position absolute
        top 0
        left 0

    > .verso--previous
        transform translate3d(0, -100%, 0)

    > .verso--before
        transform translate3d(0, -200%, 0)

    > .verso--next
        transform translate3d(0, 100%, 0)

    > .verso--after
        transform translate3d(0, 200%, 0)
