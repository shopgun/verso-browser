.verso
    position relative
    height 100%
    outline 0
    overflow hidden
    box-sizing border-box

    *,
    *:before,
    *:after
        box-sizing inherit

.verso__page
    absolute top left
    width 100%
    height 100%
    display none

    &[data-state="previous"],
    &[data-state="current"],
    &[data-state="next"]
        will-change transform

