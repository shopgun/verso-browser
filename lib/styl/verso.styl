.verso
    position relative
    height 100%
    display none
    outline 0
    overflow hidden
    box-sizing border-box

    &[data-ready="true"]
        display block

    *,
    *:before,
    *:after
        box-sizing inherit

.verso__page
    absolute top left
    width 100%
    height 100%

