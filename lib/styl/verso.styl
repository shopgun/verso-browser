.verso
    position relative
    height 100%
    outline 0
    overflow hidden
    visibility hidden
    box-sizing border-box

    &[data-shown="true"]
        visibility visible

    *,
    *:before,
    *:after
        box-sizing inherit

.verso__pages
    absolute top left
    right 0
    bottom 0
    overflow hidden

.verso__page
    absolute top left
    width 100%
    height 100%
    visibility hidden
    overflow hidden
    overflow auto

    &[data-scroll="true"][data-state="current"]
        overflow auto
        overflow-scrolling touch
