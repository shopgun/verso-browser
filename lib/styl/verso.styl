.verso
    position relative
    min-height 100%
    margin 0 auto
    overflow hidden
    overflow-y auto
    visibility visible

.verso__page
    width auto
    min-height 100%
    position relative

.verso--before,
.verso--previous,
.verso--next,
.verso--after
    position absolute
    top -999em
    left -999em

.verso--current
    z-index 2
