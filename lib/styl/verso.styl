.verso
    position relative
    min-height 100%
    margin 0 auto
    overflow hidden
    visibility hidden

    &[data-ready="true"]
        visibility visible

    > .verso__page
        absolute top left
        right 0
        bottom 0
        z-index 1
        overflow hidden

        &[data-state="current"]
            z-index 2

        > .verso__scale
            absolute top left
            right 0
            bottom 0
