.verso
    position relative
    height 100%
    outline 0
    overflow hidden
    visibility hidden
    box-sizing border-box

    &[data-shown="true"]
        visibility visible

    *,
    *:before,
    *:after
        box-sizing inherit

.verso__pages
    absolute top left
    right 0
    bottom 0
    overflow hidden

.verso__page
    absolute top left
    width 100%
    height 100%
    visibility hidden
    overflow hidden

    &[data-state="current"]
        overflow auto
        overflow-scrolling touch

.verso__scroll-child
    transform-origin 0% 0%
    transition all 500ms ease-in-out
    overflow hidden
