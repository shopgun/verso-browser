.verso__page-spread
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    display none
    perspective 1000 // Ensures scale3d is smooth in Chrome
    transform translate3d(0, 0, 0) // Avoid flicker in Safari/Chrome
    transform-style preserve-3d // Avoid flicker in Firefox

    for $percentage in (1..100)
        &[data-width=\"{$percentage}\"]
            width ($percentage)%
    
    > .verso__page
        absolute top left
        bottom 0
        width 100%
        transform translate3d(0, 0, 0) // Avoid flicker
        background-repeat no-repeat
        background-position center center
        
    > .verso-page--verso
            background-position right center
            width 50%
        
    > .verso-page--recto
            background-position left center
            left 50%
            width 50%

    > .verso__overlay
        absolute top left
        width 0%
        height 0%
        z-index 2
        transform translate3d(0, 0, 0) // Avoid flicker
        display block
        cursor pointer