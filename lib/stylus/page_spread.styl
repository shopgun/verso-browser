.verso__page-spread
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    display none
    transform translate3d(0, 0, 0)

    for $percentage in (1..100)
        &[data-width=\"{$percentage}\"]
            width ($percentage)%

.verso-page-spread__content
    absolute top left
    right 0
    bottom 0
    z-index 1
    display flex
    align-items stretch
    transform translate3d(0, 0, 0)

.verso-page-spread__overlay
    absolute top left
    width 0%
    height 0%
    z-index 2
    transform translate3d(0, 0, 0)
    display block
    cursor pointer
