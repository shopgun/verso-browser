@import 'nib'

.verso
    position relative
    outline 0
    overflow hidden
    box-sizing border-box

    &[data-pinching="true"]
        .verso__page-spread:not([data-active="true"])
            visibility hidden

    *,
    *:before,
    *:after
        box-sizing inherit

.verso__scroller
    absolute top left
    right 0
    bottom 0
    transform-origin 0 0
    transform-style preserve-3d

@require 'page_spread'
