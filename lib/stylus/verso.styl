@import 'nib'

.verso
    position relative
    outline 0
    overflow hidden
    box-sizing border-box

    *,
    *:before,
    *:after
        box-sizing inherit

.verso__scroller
    absolute top left
    right 0
    bottom 0
    transform-origin 0 0
    touch-action none !important

@require 'page_spread'
@require 'page'
